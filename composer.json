{
    "name": "artyuum/request-dto-mapper-bundle",
    "description": "This bundle provides an easy way to automatically map the incoming request data to a DTO and optionally validate it.",
    "keywords": [
        "symfony",
        "bundle",
        "dto",
        "api",
        "request-mapper",
        "mapper"
    ],
    "type": "symfony-bundle",
    "require": {
        "php": "^8.0",
        "symfony/serializer": "^5.0 || ^6.0",
        "symfony/http-kernel": "^5.0 || ^6.0",
        "symfony/config": "^5.0 || ^6.0",
        "symfony/event-dispatcher": "^5.0 || ^6.0",
        "symfony/framework-bundle": "^5.0 || ^6.0"
    },
    "suggest": {
        "symfony/validator": "For validating the DTO (if validation enabled)."
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Artyum Petrov",
            "email": "artyum@protonmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Artyum\\RequestDtoMapperBundle\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
